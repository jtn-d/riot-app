{
  "name": "riot-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "node scripts/test-all.js",
    "test:unit": "karma start tests/unit/karma.conf.js --single-run",
    "test:e2e": "wdio tests/e2e/wdio.conf.js",
    "serve": "parallelshell \"npm run riot:watch\" \"nodemon ./bin/www\"",
    "riot:compile": "parallelshell \"riot -e css tags public/styles.css\" \"riot --exclude css tags public/index.js\"",
    "riot:watch": "parallelshell \"riot -w -e css tags public/styles.css\" \"riot -w --exclude css tags public/index.js\""
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "jade": "~1.11.0",
    "morgan": "~1.6.1",
    "riot": "^2.3.18",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.3",
    "karma-ie-launcher": "^0.2.0",
    "karma-junit-reporter": "^0.4.2",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^2.0.2",
    "karma-riot": "^1.0.1",
    "karma-sinon-chai": "^1.2.0",
    "lolex": "^1.4.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "selenium-standalone": "^5.1.0",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "wdio-junit-reporter": "0.0.2",
    "wdio-mocha-framework": "^0.2.12",
    "webdriverio": "^4.0.5"
  }
}
