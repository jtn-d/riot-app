{
  "name": "riot-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "serve": "parallelshell 'npm run copy' 'npm run riot:watch' 'nodemon ./bin/www'",
    "riot:compile": "parallelshell 'riot -e css app public/styles.css' 'riot --exclude css app public/index.js'",
    "riot:watch": "parallelshell 'riot -w -e css app public/styles.css' 'riot -w --exclude css app public/index.js'",
    "copy": "cp app/main.css public"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "jade": "~1.11.0",
    "morgan": "~1.6.1",
    "riot": "^2.3.18",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
		"parallelshell": "^2.0.0",
    "nodemon": "^1.9.1"
  }
}
