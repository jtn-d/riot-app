{
  "name": "riot-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "node scripts/testAll.js",
    "test:unit": "karma start tests/unit/karma.conf.js --single-run",
    "test:e2e": "wdio tests/e2e/wdio.conf.js",
    "build": "parallelshell \"npm run riot:css\" \"npm run browserify\"",
    "serve": "parallelshell \"npm run riot:watch:css\" \"npm run watchify\" \"nodemon ./bin/www\" \"npm run browser-sync\"",
    "riot:css": "riot -e css tags public/styles.css",
    "riot:watch:css": "riot -w -e css tags public/styles.css",
    "browserify": "browserify -t riotify public/router.js > public/bundle.js",
    "watchify": "watchify -t riotify public/router.js -o public/bundle.js",
    "browser-sync": "browser-sync start --proxy http://localhost:3000 --files public/* --reload-delay 1000"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "es6-promise": "^3.1.2",
    "express": "~4.13.1",
    "isomorphic-fetch": "^2.2.1",
    "jade": "~1.11.0",
    "morgan": "~1.6.1",
    "riot": "^2.3.18",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "browser-sync": "^2.12.5",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.3",
    "karma-coverage": "^0.5.5",
    "karma-ie-launcher": "^0.2.0",
    "karma-junit-reporter": "^0.4.2",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^2.0.2",
    "karma-sinon-chai": "^1.2.0",
    "lolex": "^1.4.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "riotify": "^1.0.0",
    "selenium-standalone": "^5.1.0",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "watchify": "^3.7.0",
    "wdio-junit-reporter": "0.0.2",
    "wdio-mocha-framework": "^0.2.12",
    "webdriverio": "^4.0.5"
  }
}
